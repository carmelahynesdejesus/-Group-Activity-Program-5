#include <iostream>

void getTwoNumbers(double& num1, double& num2) {
    std::cout << "Enter the first number: ";
    std::cin >> num1;
    std::cout << "Enter the second number: ";
    std::cin >> num2;
}

int main() {
    double num1, num2;
    getTwoNumbers(num1, num2);
    std::cout << "You entered: " << num1 << " and " << num2 << std::endl;
    return 0;
}
