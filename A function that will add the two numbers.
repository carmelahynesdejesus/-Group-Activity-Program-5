#include <iostream>

double addNumbers(double num1, double num2) {
    return num1 + num2;
}

int main() {
    double num1, num2, sum;
    std::cout << "Enter the first number: ";
    std::cin >> num1;
    std::cout << "Enter the second number: ";
    std::cin >> num2;
    sum = addNumbers(num1, num2);
    std::cout << "The sum is: " << sum << std::endl;
    return 0;
}
